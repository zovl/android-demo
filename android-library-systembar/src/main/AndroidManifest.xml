<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zovlzhongguanhua.demo.systembar">

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AppCompact_TitleActivity"
            android:launchMode="singleTask"
            android:configChanges="orientation"
            android:theme="@style/AppCompact_Title"/>
        <activity
            android:name=".AppCompact_NoTitleActivity"
            android:launchMode="singleTask"
            android:configChanges="orientation"
            android:theme="@style/AppCompact_NoTitle"/>
        <activity
            android:name=".Fragment_TitleActivity"
            android:launchMode="singleTask"
            android:configChanges="orientation"
            android:theme="@style/Fragment_Title"/>
        <activity
            android:name=".Fragment_NoTitleActivity"
            android:launchMode="singleTask"
            android:configChanges="orientation"
            android:theme="@style/Fragment_NoTitle"/>
    </application>
</manifest>